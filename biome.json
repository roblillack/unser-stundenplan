{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["biome.json", "package.json", "tsconfig.json", "*.ts", "src/**/*"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [":PACKAGE:", ":BLANK_LINE:", ":PATH:"]
					}
				},
				"useSortedAttributes": "on",
				"useSortedProperties": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"a11y": {
				"noAutofocus": "off"
			}
		}
	}
}

{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"a11y": {
				"noAutofocus": "off"
			}
		}
	}
}
